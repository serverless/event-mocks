{
  "compilerOptions": {
    "sourceMap": true,
    "sourceRoot": "./lib",
    "moduleResolution": "node",
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["lib"]
}
